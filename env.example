# Copy this file to .env.local and fill in your values

# Google OAuth Configuration
# Get your Client ID from: https://console.cloud.google.com/
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com

# Backend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Wallet Secret Key (for deriving deterministic wallets)
# IMPORTANT: Keep this secret! Use a strong random string in production
WALLET_SECRET=your-super-secret-wallet-seed-change-this-in-production

# Solana Network
SOLANA_RPC_ENDPOINT=https://api.devnet.solana.com
SOLANA_NETWORK=devnet

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production

# Database Configuration (Prisma)
DATABASE_URL="postgresql://user:password@localhost:5432/ziplink?schema=public"

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

